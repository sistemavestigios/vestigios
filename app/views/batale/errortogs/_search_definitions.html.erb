<%= form_tag batale_errortogs_path, remote: true, method: :get, id: 'search-form' do %>
  <div class='paper-material mdl-card mdl-shadow--2dp'>
    <div class='mdl-card__title'>
      <h2 class='mdl-card__title-text'>Busca</h2>
    </div>
    <div class='mdl-card__supporting-text'>
      <p>
        Quantidade de erros por p√°gina: <%= select_tag 'per_page', options_for_select([5,10,15,20,25], params[:per_page]) %>
      </p>
      <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--3-col">
          <div class='mdl-textfield mdl-js-textfield mdl-textfield--floating-label'>
            <%= label_tag :target_word, Batale::Definition.human_attribute_name(:target_word), class: 'mdl-textfield__label' %>
            <%= text_field_tag 'words.right', nil, class: 'mdl-textfield__input' %>
          </div>
        </div>
        <!-- <div class="mdl-cell mdl-cell--3-col">
          <%#= label_tag :name, Batale::Errortog.human_attribute_name(:name) %>
          <%#= select_tag :name, options_for_select(Batale::Errortog.get_all_errortogs.map(&:name)), { multiple: true } %>
        </div> -->
        <div class="mdl-cell mdl-cell--3-col">
          <%= label_tag :rule, Batale::Definition.human_attribute_name(:rule) %>
          <%= select_tag :rule, options_for_select(Batale::Definition.pluck(:rule)), { multiple: true } %>
        </div>
      </div>
    </div>
    <div class='mdl-card__actions mdl-card--border'>
      <%= button_tag 'Buscar', class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' %>
      <%= button_tag 'Limpar Busca', class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect',
            onclick: 'clearFields()', type: 'button' %>
      <button type='button' class='mdl-button mdl-js-button mdl-button--icon' id='dwnld-tn-pdf' disabled>
        <i class='material-icons'>picture_as_pdf</i>
      </button>
    </div>
  </div>
  <div class='mdl-tooltip' data-mdl-for='dwnld-tn-pdf'>Baixar <strong>PDF</strong></div>
<% end %>
