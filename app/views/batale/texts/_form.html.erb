<%= render 'shared/error_messages', obj: batale_text %>
<div class='paper-material mdl-card mdl-shadow--2dp'>
  <div class='mdl-card__title'>
    <h2 class='mdl-card__title-text'>
      <% if batale_text.new_record? %>
        Novo <%= batale_text.model_name.human %>
      <% else %>
        Editando <%= "#{batale_text.model_name.human}: #{batale_text.code}" %>
      <% end %>
    </h2>
  </div>
  <%= form_for(batale_text) do |f| %>
    <div class='mdl-card__supporting-text'>
      <% Batale::Text.field_names.each do |field_name| %>
        <div class='mdl-textfield mdl-js-textfield mdl-textfield--floating-label full_size'>
          <%= f.label field_name, class: 'mdl-textfield__label' %>
          <%= f.text_field field_name, class: 'mdl-textfield__input' %>
        </div>
      <% end %>
      <br>
      <div class='mdl-textfield mdl-js-textfield mdl-textfield--floating-label full_size'>
        <%= f.label :original, class: 'mdl-textfield__label' %>
        <%= f.text_area :original, class: 'mdl-textfield__input', rows: "#{batale_text.rows}" %>
      </div>
    </div>
    <div class='mdl-card__actions mdl-card--border'>
      <%= f.submit class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' %>
      <%= link_to t('links.show'), batale_text,
          class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' unless batale_text.new_record? %>
      <%= link_to t('links.back'), batale_texts_path, class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' %>
    </div>
  <% end %>
</div>
