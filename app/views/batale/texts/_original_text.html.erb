<div class='paper-material mdl-card mdl-shadow--2dp' id='original-text'>
  <div class='card-text-title mdl-card__title'>
    <h2 class='mdl-card__title-text'>Texto Original:</h2>
  </div>
  <div class='mdl-card__menu card-menu-button'>
    <button class='mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect js-button' id="text_<%= batale_text.id %>">
      <i class='material-icons'>info</i>
    </button>
  </div>
  <div class='card-text-full-text mdl-card__supporting-text' id='texto-original'>
    <%= batale_text.original_highlighted %>
  </div>
  <div class=' mdl-card__actions mdl-card--border'>
    <%# TODO: add analysis %>
    <%#= link_to 'Análise', dashboard_path, class: ' mdl-button mdl-js-button mdl-button--primary mdl-js-ripple-effect' %>
    <button class='mdl-button mdl-js-button mdl-button--primary mdl-js-ripple-effect' onclick='getSelectionText();' id='selection_bttn' disabled>
      Enviar Seleção
    </button>
    <%= link_to t('links.edit'), edit_batale_text_path(batale_text), class: 'mdl-button mdl-js-button mdl-button--primary mdl-js-ripple-effect' %>
    <%= link_to t('links.delete'), batale_text,
                          method: :delete,
                          data: { confirm: t('links.confirm') },
                          class: 'mdl-button mdl-js-button mdl-button--primary mdl-js-ripple-effect' %>
  </div>
</div>
