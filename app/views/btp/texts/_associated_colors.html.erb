<div class="mdl-card mdl-shadow--2dp paper-material">
  <div class="mdl-card__title">
    <h2 id="cores-associadas-title" class="mdl-card__title-text">
      Cores associadas por você
    </h2>
  </div>
  <div id="colors-card" class="mdl-card__supporting-text">
    <% if @associated_colors.present? %>
      <% @associated_colors.each do |color| %>
        <%= render 'color_chip', color: color %>
      <% end %>
    <% else %>
      <p> Você ainda não associou nenhuma cor ao texto.</p>
      <br><br>
    <% end %>
