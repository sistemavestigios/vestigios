          <%#= dialog_desassociar_cores @color_chips[:user][k], k.id.to_s %>
        <%# end %>
      <%# end %>
    <%# else %>
    <%# end %>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <button id="create_color" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect js-button">
      Criar Nova Cor
    </button>
    <button id="switch-associations-button" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
        onclick="switchAssociations();">
      Ver todas associações
    </button>
  </div>
</div>
