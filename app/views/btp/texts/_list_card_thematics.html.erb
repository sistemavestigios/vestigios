<div class="mdl-grid">
  <% @thematics.each do |thematic| %>
    <div class='btp-color-card mdl-card mdl-shadow--2dp mdl-cell mdl-cell--2-col'>
      <div class='mdl-card__title' style='color: #fff; background-color: #A57224'>
        <h2 class='mdl=card__title-text'> <%= thematic[:acronym] %> </h2>
      </div>
      <div class='mdl-card__supporting-text'>
        <p>Cont√©m <%= pluralize(thematic[:count], 'texto', 'textos') %>.</p>
      </div>
      <div class='mdl-card__actions mdl-card--border'>
        <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" id="<%=thematic[:acronym]%>"
            onclick="showThematicTexts(this)">
            <%= t('links.show') %>
        </button>
      </div>
    </div>
  <% end %>
</div>
<script>
function showThematicTexts(thematic) {
  $('#acronym')
      .val([thematic.id])
      .trigger('change');
}
</script>
