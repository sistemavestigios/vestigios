<dialog id="dialog_create_bloc" class="mdl-dialog">
  <%= form_with(model: Btp::Bloc.new, local: false) do |f| %>
    <h5 class="mdl-dialog__title">Criar um Bloco</h5>
    <div class="mdl-dialog__content">
      <div class='mdl-textfield mdl-js-textfield mdl-textfield--floating-label'>
        <%= f.label :name, class: 'mdl-textfield__label' %>
        <%= f.text_field :name, class: 'mdl-textfield__input' %>
      </div>
      <br>
      <div class='mdl-textfield mdl-js-textfield mdl-textfield--floating-label'>
        <%= f.label :description, class: 'mdl-textfield__label' %>
        <%= f.text_area :description, class: 'mdl-textfield__input', rows: '2' %>
      </div>
    </div>
    <div class="mdl-dialog__actions">
      <%= f.submit class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' %>
      <button type="button" class="close mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
        Cancelar
      </button>
    </div>
  <% end %>
</dialog>
