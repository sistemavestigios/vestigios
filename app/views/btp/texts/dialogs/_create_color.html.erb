<dialog id="dialog_create_color" class="mdl-dialog" >
  <%= form_with(model: Btp::Color.new, local: false) do |f| %>
    <h5 class="mdl-dialog__title">Crie uma nova cor</h5>
    <div class="mdl-dialog__content">
      <div class='mdl-textfield mdl-js-textfield mdl-textfield--floating-label'>
        <%= f.label :tag, class: 'mdl-textfield__label' %>
        <%= f.text_field :tag, class: 'mdl-textfield__input' %>
      </div>
      <br>
      <div class='mdl-textfield mdl-js-textfield mdl-textfield--floating-label full_size'>
        <%= f.label :hex_color, class: 'mdl-textfield__label' %>
        <%= f.text_field :hex_color, class: 'mdl-textfield__input', id: 'input_hex_color' %>
      </div>
    </div>
    <div class="mdl-dialog__actions">
      <%= f.submit class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' %>
      <button type="button" class="close mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
        Cancelar
      </button>
    </div>
  <% end %>
</dialog>
