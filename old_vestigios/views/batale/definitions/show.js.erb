$("#pagination-itens").empty();
$("#count").html("<%= pluralize @count, 'texto associado', 'textos associados'%>")
$("#pagination-itens").html("<%= escape_javascript render 'list_associated_texts' %>");
$("#paginator").html("<%= escape_javascript(paginate(@associated_texts, remote: true)).to_s %>");

<% if  params[:page].nil? %>
<% if @count > 1 %>
  $("#text-info").html('Foram encontrados <%=@count%> textos.');
  notification = document.querySelector('.mdl-snackbar');
  data = { message: "Foram encontrados <%=@count%> textos.", timeout: 3000};
  notification.MaterialSnackbar.showSnackbar(data);
<% elsif @count == 0 %>
  $("#text-info").html('Não foram encontrados textos.');
  notification = document.querySelector('.mdl-snackbar');
  data = { message: "Não foram encontrados textos.", timeout: 3000};
  notification.MaterialSnackbar.showSnackbar(data);
<% else %>
  $("#text-info").html('Foi encontrado 1 texto.');
  notification = document.querySelector('.mdl-snackbar');
  data = { message: "Foi encontrado 1 texto.", timeout: 3000};
  notification.MaterialSnackbar.showSnackbar(data);
<% end %>
<% end %>
