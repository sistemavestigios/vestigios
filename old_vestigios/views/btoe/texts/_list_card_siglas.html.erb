<div id="paginator" align="center"><%= paginate(@siglas, remote: true) %></div>

<div class="mdl-grid">
  <% @siglas.each do |sigla| %>
    <div class="btoe-color-card mdl-card mdl-shadow--2dp mdl-cell mdl-cell--2-col">
      <%# content_tag(tag, content, options = {})
       gera uma tag html do tipo tag contendo content com tais options
       aqui: <div class="mdl..." style="color....."><h2 class="mdl...">color_tag</h2></div>%>
      <%= content_tag(:div,
                          content_tag(:h2, sigla[:sigla], class: "mdl-card__title-text" ),
                          class: "mdl-card__title mdl-card--expand" ,
                          style: "color: #ffffff; background-color: #a57224;") %>

      <div class="mdl-card__supporting-text">
        <p>Cont√©m <%= pluralize(sigla[:count], "texto", "textos") %>.</p>
      </div>

      <div class="mdl-card__actions mdl-card--border">
        <%= link_to "Ver mais",
                    btoe_see_more_path(:sigla => sigla[:sigla]),
                    class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
                      %>
      </div>

    </div>
  <% end %>
</div>

