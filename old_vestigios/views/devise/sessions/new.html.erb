<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <main class="login-center-card">
    <div class="login-center-card mdl-card mdl-shadow--6dp">
      
      <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
        <h2 class="mdl-card__title-text">Atlas</h2>
      </div>
      
      <div class="padding_card_login">
        <div class="card-text">
            <div class="mdl-textfield mdl-js-textfield">
              <%= f.email_field :email, autofocus: true, class:"mdl-textfield__input", type:"text", id:"f_email"%>
              <label class="mdl-textfield__label" for="username"><%= f.label :email %></label>
            </div>  
            
            <div class="mdl-textfield mdl-js-textfield">
              <%= f.password_field :password, autocomplete: "off", class:"mdl-textfield__input", type:"password", id:"userpass" %>
              <label class="mdl-textfield__label" for="userpass"><%= f.label :senha %></label>
            </div>
        </div>
    
        <div class="remember-me">
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %> <%= f.label :lembrar %>
            </div>
          <% end -%>
        </div>
        
        <div class="mdl-card__actions mdl-card--border" style="padding: 10px 0 5px 0 ">
          <%= f.submit "Entrar", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
        </div>
     
     </div>
    </div>
  </main>

  <div class="form-center">
    <%= render "devise/shared/links" %>
  </div>
  
</div>

<% end %>

